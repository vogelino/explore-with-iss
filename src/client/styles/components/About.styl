@import 'nib'

.about-section,
.about-section .information-window
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	box-sizing border-box

.about-section
	pointer-events none
	padding 40px
	background rgba(black, 0)
	transition background $quick $smoothEase

	.about-opener,
	.information-window,
	.about-closer
		background darken($sideBarBackgroundColor, 10%)
		box-sizing border-box
		border 1px solid darken($sideBarBackgroundColor, 20%)
		color $sideBarTextColor

	.about-opener,
	.about-closer
		border-radius 3px
		position absolute
		z-index 100
		cursor pointer
		outline none
		pointer-events auto
		padding 8px 15px 10px
		font-size 14px

	.about-opener
		bottom 40px
		right 40px
		transition opacity $quick $smoothEase
		opacity 0

	.information-window
		position relative
		transform-style preserve-3d
		backface-visibility hidden
		transform scale(.8) rotateY(20deg)
		transform-origin 50% 50%
		perspective-origin 50% 50%
		z-index 99
		transition transform 500ms $smoothEase, opacity $quick $smoothEase
		border-radius 3px
		padding 80px 0 0 0
		max-width 960px
		margin 0 auto
		opacity 0

		header
			position absolute
			top 0
			left 0
			width 100%
			box-sizing border-box
			height 80px
			z-index 1
			background darken($sideBarBackgroundColor, 40%)
			padding 27px 40px

		.github-content
			position absolute
			width 100%
			top 0
			left 0
			box-sizing border-box
			padding 120px 40px 40px
			float left
			height 100%
			overflow scroll

			code,
			pre
				background darken($sideBarBackgroundColor, 20%)
				color whitesmoke

			blockquote
				font-style italic
				color rgba(white, .6)
				border-left 2px solid rgba(white, .6)

		.about-closer
			position absolute
			top 0
			right 0
			border-top-left-radius 0
			border-bottom-right-radius 0

	&.open
		z-index 98
		background rgba(black, .7)
		pointer-events auto

		.about-opener
			opacity 0

		.information-window
			pointer-events auto
			transform scale(1) rotateY(0)
			opacity 1

	&.closed
		.about-opener
			opacity 1

		.information-window
			pointer-events none