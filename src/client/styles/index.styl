@import 'nib'
@import './variables.styl'
@import './lib/markdown.styl'
@import './lib/leaflet.styl'
@import './fonts.styl'

body
	font-family $fontFamily
	margin 0
	padding 0

body,
#root,
.app
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	overflow hidden

a
	text-decoration none
	color $linkColor
	opacity 1
	transition color $quick $smoothEase, opacity $quick $smoothEase

	&:hover
		color $linkHoverColor
		opacity .8

	&.active,
	&:active
		color $linkActiveColor

@import './components/MainMap.styl'
@import './components/Sidebar.styl'
@import './components/Slideshow.styl'
@import './components/About.styl'
