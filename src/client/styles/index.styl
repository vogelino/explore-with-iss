@import 'nib'
@import 'variables'
@import 'lib/markdown'
@import 'lib/leaflet'
@import 'fonts'

body
	font-family $fontFamily
	margin 0
	padding 0

body,
#root,
.app
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	overflow hidden

a
	text-decoration none
	color $linkColor
	opacity 1
	transition color $quick $smoothEase, opacity $quick $smoothEase

	&:hover
		color $linkHoverColor
		opacity .8

	&.active,
	&:active
		color $linkActiveColor

@import 'components/MainMap'
@import 'components/Sidebar'
@import 'components/Slideshow'
@import 'components/About'
