@import url('./lib/leaflet.css')

@import 'variables'

body
	font-family 'Open sans', Arial, sans-serif
	margin 0
	padding 0

body,
#root,
.app
	position absolute
	width 100%
	height 100%
	top 0
	left 0

.main-map
	z-index 1
	width 100%
	height 100%
	box-sizing border-box
	padding-left $sidebarWidth
	padding-bottom $routePlayerHeight
	position absolute
	top 0
	right 0

	.leaflet-container
		width 100%
		height 100%
		position relative
		float left

	path.country-borders
		stroke-width 1px
		stroke turquoise
		stroke-opacity .9
		fill turquoise


.main-sidebar
	z-index 3
	font-size 12px
	width $sidebarWidth
	height 100%
	box-sizing border-box
	padding 20px
	position absolute
	top 0
	left 0
	background #222222
	color #ebebeb

	.country-name,
	.country-informations-title
		text-transform uppercase

	.country-name
		font-size 22px

		.country-native-name
			color grey
			font-weight 300
			font-size 12px
			margin-left 10px
			font-family Arial

	.country-informations-title
		font-weight 300
		font-size 12px

	.country-information-list,
	.country-information-list-element
		list-style none
		margin 0
		padding 0
		width 100%
		float left

		label
			font-weight 900
			width 150px
			padding-bottom 10px
			float left

.route-player
	z-index 2
	position absolute
	bottom 0
	right 0
	width 100%
	height $routePlayerHeight
	background #1a1a1a
	padding 20px
	padding-left $sidebarWidth + 20
	box-sizing border-box
	color #ebebeb
